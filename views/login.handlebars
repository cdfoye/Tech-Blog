<div class='container align-middle my-5 py-4'>
  <div class='row'>
    <div class='col mx-3'>
      <form class='form login-form'>
        <div class='mb-3'>
          <h2>Login</h2>
          <label for='email-login' class='form-label'>Email address</label>
          <input
            type='email'
            class='form-control'
            id='email-login'
            aria-describedby='emailHelp'
          />
        </div>
        <div class='mb-3'>
          <label for='password-login' class='form-label'>Password</label>
          <input type='password' class='form-control' id='password-login' />
        </div>
        <div class='mb-3 form-check'>
          <input type='checkbox' class='form-check-input' id='exampleCheck1' />
          <label class='form-check-label' for='exampleCheck1'>Remember Me</label>
        </div>
        <button type='submit' class='btn btn-dark'>Login</button>
      </form>
    </div>
    <div class='col mx-3'>
      <form class='form signup-form'>
        <div class='mb-3'>
          <h2>Signup</h2>
          <label for='name-signup' class='form-label'>Name</label>
          <input type='text' class='form-control' id='name-signup' />
          <label for='email-signup' class='form-label'>Email address</label>
          <input
            type='email'
            class='form-control'
            id='email-signup'
            aria-describedby='emailHelp'
          />
          <div id='emailHelp' class='form-text'>We'll never share your email
            with anyone else.</div>
        </div>
        <div class='mb-3'>
          <label for='password-signup' class='form-label'>Password</label>
          <input type='password' class='form-control' id='password-signup' />
        </div>
        <button type='submit' class='btn btn-dark'>Sign In</button>
      </form>
    </div>
  </div>
</div>

<script src='/js/login.js'></script>