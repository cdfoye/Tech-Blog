<div class="container">
  <!-- Content here -->
  <div>
    {{#each posts as |post|}}
    <div class="card my-4">
      <div class="card-header">
        <h2 class='post-title text-dark'><a class='nav-link post-item' href='/posts/{{post.id}}'>{{post.title}}</a></h2>
      </div>
      <div class="card-body"><a class='nav-link post-item' href='/posts/{{post.id}}'>
          <p class='post-meta text-muted'>
          Posted by
          <span class='user'>{{post.user.name}}</span>
          on
          <span class='date'>{{format_date post.date_created}}</span>
        </p>
        </a></h5>
        <p class="card-text">{{post.content}}</p>
      </div>
    </div>
    {{/each}}
  </div>
</div>